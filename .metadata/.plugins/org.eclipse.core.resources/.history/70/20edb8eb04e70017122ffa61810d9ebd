package fr.m2i.thread;

public interface ContainerStatistique {
	public int countEntrees = 0;
	public static int countSorties = 0;
	public static float dureeSorties = 0;
	public static float dureeEntrees = 0;
	
	
	public default int getNbMoyenEntreesParSeconde() {
		return (countEntrees > 0) ? (int) (dureeEntrees / countEntrees) : 0;
	}
	public default int getNbMoyenSortiesParSeconde() 
	{
		return (countSorties > 0) ? (int) (dureeSorties / countSorties) : 0;
	}
	
	public default int generateTime()
	{
		int randomTime = 1 + (int)(Math.random() * ((10 - 1) + 1)) * 1000;
		return randomTime;
	}
	
	public default void addEntree()
	{
		countEntrees++;
	}

	
}
